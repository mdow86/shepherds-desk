{
  "$id": "Plan",
  "type": "object",
  "required": ["title", "clips"],
  "properties": {
    "title": { "type": "string", "minLength": 1 },
    "clips": {
      "type": "array",
      "minItems": 6,
      "maxItems": 6,
      "items": {
        "type": "object",
        "required": [
          "index",
          "start_sec",
          "end_sec",
          "dialogue",
          "verse_refs",
          "image_prompt",
          "subtitle"
        ],
        "properties": {
          "index": { "type": "integer", "minimum": 1, "maximum": 6 },
          "start_sec": { "type": "number" },
          "end_sec": { "type": "number" },
          "dialogue": { "type": "string", "maxLength": 120 },
          "verse_refs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          },
          "image_prompt": { "type": "string" },
          "subtitle": { "type": "string", "maxLength": 100 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
